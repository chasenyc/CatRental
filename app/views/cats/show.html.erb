<h2>Show Cat</h2>

<table>
  <tr>
    <td>Name</td>
    <td>Color</td>
    <td>Sex</td>
    <td>Age</td>
    <td>Description</td>
  </tr>
  <tr>
    <td><%= @cat.name %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.age %></td>
    <td><%= @cat.description %></td>
  </tr>
</table>

Rental Requests
<table>
  <tr>
    <td>Start Date</td>
    <td>End Date</td>
  </tr>
  <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
  <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <% if request.pending? %>
    <td>
      <form method="POST" action="<%= approve_cat_rental_request_url(request) %>">
        <input type="hidden" name="_method" value="PATCH">
        <input type="submit" value="Approve">
      </form>
    </td>
    <td>
      <form method="POST" action="<%= deny_cat_rental_request_url(request) %>">
        <input type="hidden" name="_method" value="PATCH">
        <input type="submit" value="Deny">
      </form>
    </td>
    <% end %>
  </tr>
  <% end %>
</table>

<%= link_to "All Cats", cats_url %>
